{% for match in matched_data %}
    <div id="{{ match.user_id }}" class="matched-card col-lg-5 {% if loop.index is odd %}offset-lg-1{% endif %}">
        <a href="#" onclick="expandSearchedUser({{ match |json_encode() }})">
            <div style="border: 1px solid black; border-radius: 10px;cursor: pointer; overflow: hidden;">
                <div class="image-wrapper-tall">
                    <img id="first-person-image" src="user_images/{{ match.Photo }}">
                </div>
                <h5 id="first-person-name" style="text-align: center; margin: 0; padding-bottom: 8px;">{{ match.first_name }}</h5>
            </div>
        </a>
    </div>
{% endfor %}