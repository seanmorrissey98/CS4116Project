{% for chat in chats_data %}
    <div style="margin: 12px;">
        <a href="#" onclick="expandChat({{ chat |json_encode() }})">
            <div id="first-person" style="background-color: rgba(143,143,143,0.1);">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col col-lg-3">
                            <div id="first-person-image-name" class="image-wrapper-circle">
                                <img id="first-person-image" src="user_images/{{ chat.Photo }}">
                            </div>
                        </div>
                        <div class="col col-lg-9">
                            <h6 id="first-person-name">{{ chat.first_name }}</h6>
                        </div>
                    </div>
                    <p id="latest-message" style="color: rgba(33,37,41,0.73);">{{ chat.latest_message }}</p>
                </div>
            </div>
        </a>
    </div>
{% endfor %}